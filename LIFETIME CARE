function toggleSidebar() {
  document.getElementById('sidebar').classList.toggle('open');
}

const diseaseData = {
  "Sickle Cell Disease": {
    img: 'assets/images/sicklecell.jpg',
    symptoms: 'Severe pain (crises), anemia, swollen hands/feet, frequent infections, delayed growth.',
    causes: 'Inherited mutation in the hemoglobin‑beta gene, producing hemoglobin S.',
    treatments: 'Hydroxyurea, blood transfusions, bone marrow transplant, pain & hydration management.'
  },
  "Anemia": {
    img: 'assets/images/normal_rbc.jpg',
    symptoms: 'Tiredness, weakness, pale skin, shortness of breath.',
    causes: 'Iron deficiency, vitamin deficiency, chronic disease.',
    treatments: 'Supplements, dietary changes, treating underlying causes.'
  }
  // Add more diseases similarly
};

document.querySelectorAll('.details-btn').forEach(btn => {
  btn.addEventListener('click', e => {
    const name = e.target.closest('.d-card').dataset.name;
    const data = diseaseData[name];
    if (data) {
      document.getElementById('modalTitle').textContent = name;
      document.getElementById('modalImg').src = data.img;
      document.getElementById('modalSymptoms').textContent = data.symptoms;
      document.getElementById('modalCauses').textContent = data.causes;
      document.getElementById('modalTreatments').textContent = data.treatments;
      document.getElementById('modal').classList.add('open');
    }
  });
});

function closeModal() {
  document.getElementById('modal').classList.remove('open');
}
